@model ContextModel

@Html.HiddenFor(m => m.ID)

<div class="form-group">
    <label>Name</label>
    @Html.ValidationMessageFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
</div>

<div class="form-group">
    <label>Data Name</label>
    @Html.ValidationMessageFor(m => m.DataName)
    @Html.TextBoxFor(m => m.DataName, new { @class = "form-control" })
</div>

<div class="form-group">
    <label>Display Text</label>
    @Html.TextBoxFor(m => m.DisplayText, new { @class = "form-control" })
</div>

<hr />

@Html.EditorFor(m => m.Containers)

<hr />

<input type="button" class="btn" id="ctlAddContainer" value="Add Root Container" onclick="metadataAction('@Url.Content("~/Metadata/AddRootContainer")'); $('ctlDialogContainer').dialog('close');" />
