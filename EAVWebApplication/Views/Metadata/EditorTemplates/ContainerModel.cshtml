@model ContainerModel

<div>
    @if (Model.ParentID != 0)
    {
        <label>Name:</label> <span style="text-decoration: underline; cursor: pointer;" onclick="metadataAction('@Url.Content("~/Metadata/EditChildContainer")?id=' + @Model.ID);">@Html.DisplayFor(m => m.Name)</span> <label>Data Name:</label> @Html.DisplayFor(m => m.DataName) <label>Display Text:</label> @Html.DisplayFor(m => m.DisplayText)
    }
    else
    {
        <label>Name:</label> <span style="text-decoration: underline; cursor: pointer;" onclick="metadataAction('@Url.Content("~/Metadata/EditRootContainer")?id=' + @Model.ID);">@Html.DisplayFor(m => m.Name)</span> <label>Data Name:</label> @Html.DisplayFor(m => m.DataName) <label>Display Text:</label> @Html.DisplayFor(m => m.DisplayText)
    }
</div>
