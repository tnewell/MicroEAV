@section scripts
{
<script>

    $("#dialog1").dialog({ autoOpen: false, modal: true });
    $("#dialog2").dialog({ autoOpen: false, modal: true });

    $("#opener1").click(function () {
        $("#dialog1").dialog("open");
    });

    $("#opener2").click(function () {
        $("#dialog2").dialog("open");
    });

</script>
}


